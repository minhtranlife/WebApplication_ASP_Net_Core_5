@{
    Layout = "_Layout";
}

@model IEnumerable<WebApplication.Models.Permission>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/assets/global/plugins/select2/select2.css" />
}

@section custom_script{
    <script type="text/javascript" src="/assets/global/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="/assets/admin/pages/scripts/table-managed.js"></script>
    <script>
        jQuery(document).ready(function () {
            TableManaged.init();
        });
        function getId(id) {
            document.getElementById("iddelete").value = id;
        }
        function getUsername(username) {
            document.getElementById("username").value = username;
        }
        function ClickDelete() {
            $('#frm_delete').submit();
        }
    </script>
}
<h3 class="page-title">
    Permission<small>&nbsp;For @ViewData["username"]</small>
</h3>
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box">
            <div class="portlet-title">
                <div class="caption"></div>
                <div class="actions">
                    <button type="button" class="btn btn-default btn-sm" data-target="#create-modal" data-toggle="modal">
                        <i class="fa fa-plus"></i>&nbsp;
                        &nbsp;Create
                    </button>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover" id="sample_3">
                            <thead>
                                <tr>
                                    <th style="text-align: center" width="2%">STT</th>
                                    <th style="text-align: center" width="10%">Roler</th>
                                    <th style="text-align: center">Index</th>
                                    <th style="text-align: center">Create</th>
                                    <th style="text-align: center">Edit</th>
                                    <th style="text-align: center">Delete</th>
                                    <th style="text-align: center">Approval</th>
                                    <th style="text-align: center" width="25%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 0; }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{i++; }
                                        <td style="text-align:center">@i</td>
                                        <td style="text-align:center">@item.Roler</td>
                                        <td style="text-align:center">@item.Index</td>
                                        <td style="text-align:center">@item.Create</td>
                                        <td style="text-align:center">@item.Edit</td>
                                        <td style="text-align:center">@item.Delete</td>
                                        <td style="text-align:center">@item.Approval</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default btn-xs mbs"><i class="fa fa-edit"></i>&nbsp;Edit</a>
                                            <button type="button" onclick="getId('@item.Id')" class="btn btn-default btn-xs mbs" data-target="#delete-modal" data-toggle="modal">
                                                <i class="fa fa-trash-o"></i>&nbsp;
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
<!-- BEGIN DASHBOARD STATS -->
<!-- END DASHBOARD STATS -->
<div class="clearfix"></div>
@await Html.PartialAsync("~/Views/BackEnd/Users/Permission/DialogModal.cshtml")




